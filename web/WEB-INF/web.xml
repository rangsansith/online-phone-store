    <servlet>
        <servlet-name>AdminLoginServlet</servlet-name>
        <servlet-class>phonestore.controller.AdminLoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PhoneDetailsUploadDBServlet</servlet-name>
        <servlet-class>phonestore.controller.PhoneDetailsUploadDBServlet</servlet-class>
