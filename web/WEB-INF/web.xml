    <servlet>
        <servlet-name>PhoneImageUploadDBServlet</servlet-name>
        <servlet-class>phonestore.controller.PhoneImageUploadDBServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteProductServlet</servlet-name>
        <servlet-class>phonestore.controller.DeleteProductServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PhoneDetailsUpdateServlet</servlet-name>
        <servlet-class>phonestore.controller.PhoneDetailsUpdateServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UserLoginServlet</servlet-name>
        <servlet-class>phonestore.controller.UserLoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UserRegisterServlet</servlet-name>
        <servlet-class>phonestore.controller.UserRegisterServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UserImageUploadServlet</servlet-name>
        <servlet-class>phonestore.controller.UserImageUploadServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UserPasswordUpdateServlet</servlet-name>
        <servlet-class>phonestore.controller.UserPasswordUpdateServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UserContactUpdateServlet</servlet-name>
