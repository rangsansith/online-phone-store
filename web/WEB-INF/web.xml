        <servlet-name>AddtoCartServlet</servlet-name>
        <servlet-class>phonestore.controller.AddtoCartServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AdminChangePassServlet</servlet-name>
        <servlet-class>phonestore.controller.AdminChangePassServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddReviewServlet</servlet-name>
        <servlet-class>phonestore.controller.AddReviewServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CheckoutServlet</servlet-name>
        <servlet-class>phonestore.controller.CheckoutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteCartItemServlet</servlet-name>
        <servlet-class>phonestore.controller.DeleteCartItemServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminLoginServlet</servlet-name>
        <url-pattern>/adminlogin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PhoneDetailsUploadDBServlet</servlet-name>
        <url-pattern>/uploadphonedetails</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PhoneImageUploadDBServlet</servlet-name>
        <url-pattern>/uploadPhoneImage</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteProductServlet</servlet-name>
        <url-pattern>/deletephone</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PhoneDetailsUpdateServlet</servlet-name>
        <url-pattern>/phonedetailsupdate</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserLoginServlet</servlet-name>
        <url-pattern>/userLogin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserRegisterServlet</servlet-name>
        <url-pattern>/userRegister</url-pattern>
    </servlet-mapping>
